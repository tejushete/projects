<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPwdTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="#0000ff"
        android:text="Password Needed!!!"
        android:textAlignment="center"
        android:textColor="#efefef"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPwdTag"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
		android:layout_marginTop="5dp"
        android:layout_below="@id/tvPwdTitle"
        android:layout_marginLeft="10dp"
        android:text="Password: "
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tvPwdTag"
        android:inputType="textPassword"
        android:layout_below="@id/tvPwdTitle"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/etPasswordInput"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnPasswordSubmitOK"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#009900"
            android:textColor="#efefef"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="OK" />

        <Button
            android:id="@+id/btnPasswordSubmitCANCEL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#990000"
            android:textColor="#efefef"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="CANCEL" />

    </LinearLayout>

</RelativeLayout>