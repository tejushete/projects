<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:src="@drawable/close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivClose"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="Name:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvName"
                android:hint="Supplier Name"
                android:padding="0dp"
                android:maxLines="2"
                android:inputType="textMultiLine"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvName"
                android:layout_marginTop="40dp"
                android:text="Address:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/tvName"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvName"
                android:hint="Address"
                android:maxLines="2"

                android:padding="0dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvTelephone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/tvAddress"
                android:layout_marginTop="18dp"
                android:text="Telephone:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTelephone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvAddress"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvTelephone"
                android:hint="Telephone"
                android:inputType="textNoSuggestions"
                android:padding="0dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/tvTelephone"
                android:layout_marginTop="17dp"
                android:text="Mobile:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvTelephone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvMobile"
                android:hint="Mobile"
                android:inputType="number|textNoSuggestions"
                android:padding="0dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/tvMobile"
                android:layout_marginTop="17dp"
                android:text="Email:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/tvMobile"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/tvEmail"
                android:hint="Email"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:padding="0dp"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tvEmail"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="SAVE"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="#009900"
                    android:id="@+id/btnSave" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="CANCEL"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:background="#990000"
                    android:id="@+id/btnCancel" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>