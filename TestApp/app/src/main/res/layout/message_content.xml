<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlMessageBodyHolder"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvContentPhoneNumber"
        android:background="#464648"
        android:visibility="invisible"></RelativeLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:id="@+id/tvContentPhoneNumber"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#01f7d6"
        />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text=""
        android:textSize="13dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:background="@drawable/rounded_textview"
        android:textColor="@android:color/black"
        android:id="@+id/tvUnreadMessages" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Body"
        android:id="@+id/tvContentMessageBody"
        android:textSize="15dp"
        android:layout_below="@+id/tvContentPhoneNumber"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#01f7d6"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date and time"
        android:id="@+id/tvContentMessageDateAndTime"
        android:textSize="10dp"
        android:layout_below="@+id/tvContentMessageBody"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#01f7d6"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="draft"
        android:id="@+id/tvContentMessageDraft"
        android:textSize="20dp"
        android:layout_below="@+id/tvUnreadMessages"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:visibility="invisible"
        android:textColor="#ff0000"
        />


</RelativeLayout>