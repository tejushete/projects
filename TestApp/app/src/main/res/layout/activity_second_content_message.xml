<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.teju.testapp.SecondContentMessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e6065c"
        android:id="@+id/rlTitleLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/tvTitlePhoneNumber"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#01f7d6"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/lvSecondContent"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlTitleLayout"
        android:layout_above="@+id/etSendMessage"
        android:stackFromBottom="true"
        android:background="#2d3e52"
        android:transcriptMode="alwaysScroll"
        android:layout_height="match_parent"></ListView>


    <EditText
        android:layout_width="270dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/etSendMessage"
        android:layout_marginLeft="10dp"
          android:hint="type message"
        android:layout_marginTop="20dp"
        android:layout_height="50dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/etSendMessage"
        android:layout_marginLeft="20dp"
        android:id="@+id/ivSend"
        android:src="@drawable/send_msg"/>
</RelativeLayout>
