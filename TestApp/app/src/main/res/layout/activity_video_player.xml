<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.teju.testapp.VideoPlayerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rlTitleBack"
        android:background="#ff000000">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/ivBackArrow"
            android:src="@drawable/back_arrow"/>
    </RelativeLayout>

    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vvView"
        android:layout_centerInParent="true"
        android:layout_below="@+id/rlTitleBack"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/vwMusicButtons">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/ivPlay"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/video_play_image"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:id="@+id/ivPause"
            android:clickable="true"
            android:visibility="visible"
            android:src="@drawable/video_pause"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/rlSeekBarView"

        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:01"
        android:id="@+id/tvCurrentTime"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:textColor="#ffffff"/>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_toRightOf="@id/tvCurrentTime"
        android:layout_toLeftOf="@id/tvTotalTime"
        android:progress="80"
        android:paddingLeft="0dp"
        android:max="100"
        android:layout_marginLeft="0dp"
        android:thumbOffset="0dp"
        android:layout_marginTop="5dp"
        android:progressDrawable="@drawable/seek_bar_style"
        android:thumb="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:01"
        android:id="@+id/tvTotalTime"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="#ffffff"/>
    </RelativeLayout>



</RelativeLayout>
