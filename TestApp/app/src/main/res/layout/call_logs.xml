<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/contact_profile"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contNumber"
        android:textSize="18dp"
        android:textColor="#01f7d6"
        android:id="@+id/tvContName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_photo"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_photo"
        android:id="@+id/ivIncomingArrow"
        android:layout_below="@+id/tvContName"
        android:src="@drawable/incoming_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        android:textSize="15dp"
        android:textColor="#01f7d6"
        android:id="@+id/tvTimeDate"
        android:layout_below="@+id/tvContName"
        android:layout_toRightOf="@+id/ivIncomingArrow"
        android:layout_marginLeft="3dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/call"
        android:layout_below="@+id/tvContName"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timeDuration"
        android:textSize="15dp"
        android:textColor="#01f7d6"
        android:id="@+id/tvTimeDuration"
        android:layout_below="@id/iv_photo"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_photo"

        />

</RelativeLayout>