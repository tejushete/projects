<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_page_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="piyush.shop.com.salesorder.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#cc0000"
            android:text="Search"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnProduct"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btnSearch"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#00cc00"
            android:text="Product"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSupplier"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btnProduct"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#0000cc"
            android:text="Supplier"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPurchaseOrder"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btnSupplier"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#aaaa00"
            android:text="Purchase Order"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnReviewOrder"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btnPurchaseOrder"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#00cccc"
            android:text="Review/Edit P.O.S."
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_below="@+id/btnReviewOrder"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#000000"
            android:text="Exit"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>
